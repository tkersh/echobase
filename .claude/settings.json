{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "entire hooks claude-code post-task"
          }
        ]
      },
      {
        "matcher": "TodoWrite",
        "hooks": [
          {
            "type": "command",
            "command": "entire hooks claude-code post-todo"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "entire hooks claude-code pre-task"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "entire hooks claude-code session-end"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "entire hooks claude-code session-start"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "entire hooks claude-code stop"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "entire hooks claude-code user-prompt-submit"
          }
        ]
      }
    ]
  },
  "permissions": {
    "deny": [
      "Read(./.entire/metadata/**)"
    ]
  },
  "sandbox": {
    "filesystem": {
      "read": {
        "denyOnly": [
          "~/.ssh",
          "~/.aws/credentials",
          "~/.npmrc",
          "~/.gitconfig",
          "/etc/passwd",
          "/etc/shadow"
        ]
      },
      "write": {
        "allowOnly": [
          "/tmp/claude",
          "/private/tmp/claude",
          "~/.npm/_logs",
          "~/.claude/debug",
          "~/.claude/statsig",
          "."
        ],
        "denyWithinAllow": [
          ".env",
          "node_modules/.bin",
          "**/node_modules/.bin"
        ]
      }
    },
    "network": {
      "allowOnly": [
        "localhost",
        "127.0.0.1",
        "0.0.0.0",
        "::1",
        "host.docker.internal",
        "docker.internal",
        "*.localhost.localstack.cloud",
        "sqs.us-east-1.localhost.localstack.cloud",
        "github.com",
        "*.github.com",
        "registry.npmjs.org",
        "*.npmjs.org",
        "playwright.azureedge.net",
        "*.playwright.dev",
        "docs.claude.com"
      ]
    }
  }
}
